{
  "name": "swiftav-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter swiftav dev",
    "build": "pnpm --recursive --filter \"@swiftav/*\" build && pnpm --filter swiftav build",
    "build:packages": "pnpm --recursive --filter \"@swiftav/*\" build",
    "build:core": "pnpm --filter @swiftav/core build",
    "build:audio": "pnpm --filter @swiftav/audio build",
    "build:video": "pnpm --filter @swiftav/video build",
    "build:renderer": "pnpm --filter @swiftav/renderer build",
    "build:editor": "pnpm --filter @swiftav/editor build",
    "build:canvas": "pnpm --filter @swiftav/canvas build",
    "build:types": "pnpm --filter @swiftav/types build",
    "build:sdk": "pnpm --filter @swiftav/sdk build",
    "build:app": "pnpm --filter swiftav build",
    "lint": "pnpm --recursive --filter \"*\" lint",
    "preview": "pnpm --filter swiftav preview",
    "clean": "pnpm --recursive --filter \"*\" exec rm -rf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
